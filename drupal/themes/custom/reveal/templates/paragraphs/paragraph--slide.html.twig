{#
/**
 * @file
 * Default Reveal implementation to display a slide paragraph.
 */
#}
{%
set classes = [
'paragraph',
'paragraph--type--' ~ paragraph.bundle|clean_class,
view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}

{% block slide_body %}
  <section {{ attributes.addClass(classes) }}>
    {% block slide_body_inner %}
      {{ content|without('field_slides') }}
      {{ content.field_slides }}
    {% endblock slide_body_inner %}
  </section>
{% endblock slide_body %}

