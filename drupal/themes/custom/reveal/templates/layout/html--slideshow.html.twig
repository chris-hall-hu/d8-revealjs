{% extends "html.html.twig" %}

{% block html_js_bottom %}
    {{ parent() }}
    <script>
        // Full list of configuration options available at:
        // https://github.com/hakimel/reveal.js#configuration
        Reveal.initialize({
                controls: true,
                progress: true,
                history: true,
                center: true,

                transition: 'slide', // none/fade/slide/convex/concave/zoom

                // Optional reveal.js plugins
                dependencies: [
                        { src: '/themes/custom/reveal/lib/js/classList.js', condition: function() { return !document.body.classList; } },
                        { src: '/themes/custom/reveal/plugin/markdown/marked.js', condition: function() { return !!document.querySelector( '[data-markdown]' ); } },
                        { src: '/themes/custom/reveal/plugin/markdown/markdown.js', condition: function() { return !!document.querySelector( '[data-markdown]' ); } },
                        { src: '/themes/custom/reveal/plugin/highlight/highlight.js', async: true, callback: function() { hljs.initHighlightingOnLoad(); } },
                        { src: '/themes/custom/reveal/plugin/zoom-js/zoom.js', async: true },
                        { src: '/themes/custom/reveal/plugin/notes/notes.js', async: true }
                ]
        });
        {{ ddl(html, 'The html') }}
    </script>
    {{ attach_library('reveal/revealjs') }}
    {{ attach_library('reveal/reveal-additions') }}
{% endblock html_js_bottom %}


