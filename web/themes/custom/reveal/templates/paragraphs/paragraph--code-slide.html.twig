{#
/**
 * @file
 * Default reveal implementation to display a paragraph.
 */
#}
{%
set classes = [
'paragraph',
'paragraph--type--' ~ paragraph.bundle|clean_class,
view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
]
%}

{% block slide_body %}
  <section {{ attributes.addClass(classes) }}>
    {% block slide_body_inner %}
      {{ content.field_slide_title }}
      {{ content.field_slide_sub_title }}
      <pre>
        <code class="hljs_javascript">{{paragraph.field_slide_wysiwyg.value}}</code>
      </pre>
    {% endblock slide_body_inner %}
  </section>
{% endblock slide_body %}
